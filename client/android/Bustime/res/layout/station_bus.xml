<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg" >

    <RelativeLayout
        android:id="@+id/top_relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg" >

        <Button
            android:id="@+id/back_btn"
            style="@style/titlebtnfont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.7dip"
            android:background="@drawable/btn_back"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/back" />

        <TextView
            android:id="@+id/title_textview"
            style="@style/titlefont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.7dip"
            android:background="@drawable/btn_refresh"
            android:contentDescription="@string/refresh" />
    </RelativeLayout>

    <Button
        android:id="@+id/favorite_btn"
        style="@style/titlebtnfont"
        android:layout_width="44dip"
        android:layout_height="44dip"
        android:layout_below="@+id/top_relativelayout"
        android:background="@drawable/tab_favorite"
        android:gravity="center_horizontal"
        android:text="@string/favorite" />

    <ListView
        android:id="@+id/station_bus_listview"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favorite_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:cacheColorHint="#00000000"
        android:divider="@color/white" >
    </ListView>

</RelativeLayout>